.row
  .col-lg-6
    %h5= t("search.provider")
    - @tree.select{|el| el.parent_id == nil}.each do |root|
      - children = @tree.select{|el| el.parent_id == root.id}
      - unless children.any?
        %li
          = link_to t("categories.#{root[:title]}"), provider_search_path(id: root[:id]), title: root[:title]
      - else
        %li
          = link_to t("categories.#{root[:title]}"), provider_search_path(id: root[:id]), title: root[:title]
          %ul
            - children.each do |child|
              %li
                = link_to t("categories.#{child[:title]}"), provider_search_path(id: child[:id]), title: child[:title]
  .col-lg-6
    %h5= t("search.purchaser")
